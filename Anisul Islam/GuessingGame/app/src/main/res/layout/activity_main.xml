<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/black"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_id_1"
        android:background="@color/water"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="italic"
        />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_txt_id_1"
            android:backgroundTint="@color/water"
            android:hint="@string/edit_txt_1"
            android:textColorHint="@color/water"
            android:layout_margin="16dp"
            android:inputType="number"
            />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_id_2"
        android:text="@string/check"
        android:background="@color/green"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_id_1"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="@color/green"
        android:gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:textStyle="bold"
        />
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_id_2"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="@color/reds"
        android:gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:textStyle="bold"
        />






</LinearLayout>